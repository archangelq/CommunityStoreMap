<% @stores.each do |store| %>
  <div class="map-location" data-jmapping="{id: <%= store.id %>, point: {lat: <%= store.lat %>, lng: <%= store.lng %>}}">
    <a href="#" class="map-link"><%= store.name %></a>
    <div class="info-box">
      <p><%= simple_format store.description %></p>
    </div>
  </div>
<% end %>