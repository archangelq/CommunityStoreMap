<% lable_text = lambda {|value, required| "#{required} #{value} #{content_tag :br}"}%>

<%= simple_form_for(@store) do |f| %>
  <% if @store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
      <% @store.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="input">
    <div class="fieldgroup">
      <fieldset class="flow">
        <legend>Location Information</legend>
      <%= f.input :name, :label_text => lable_text %>
      <%= f.input :address %>
      <%= f.input :url %>
      <%= f.input :online_store_url %>
    </fieldset>
      
      <fieldset class="flow">
        <legend>Contact Information</legend>
      <%= f.input :phone_number %>
      <%= f.input :email %>
    </fieldset>
    </div>
    
    <div class="fieldgroup">
      <fieldset class="divider even">
        <%= f.association :game_systems, :as => :check_boxes %>        
      </fieldset>
    </div>
    
    <div class="fieldgroup">
      <fieldset class="flow">
        <%= f.input :hours, :as => :text %>
      </fieldset>
      
      <fieldset class="flow">
        <%= f.input :description, :as => :text %>
      </fieldset>
    </div>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
