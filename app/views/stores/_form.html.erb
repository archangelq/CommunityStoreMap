<% lable_text = lambda {|value, required| "#{required} #{value} #{content_tag :br}"}%>

<%= simple_form_for(@store) do |f| %>
  <% if @store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
      <% @store.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="input">
    <%= f.input :name, :label_text => lable_text %>
    <%= f.input :address %>
    <%= f.input :url %>
    <%= f.input :online_store_url %>
    <%= f.input :phone_number %>
    <%= f.input :email %>
    <%= f.input :hours, :as => :text %>
    <%= f.input :description, :as => :text %>
    <%= f.association :game_systems, :as => :check_boxes %>
  </div>

  <div class="actions">
    <%= f.button :submit %>
  </div>
<% end %>
